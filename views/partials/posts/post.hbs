<li class="post-item">
  <div class="post-message" id="message-{{post.id}}">{{post.message}}</div>
  <p class="post-author">Written by {{post.username}} </p>
  <p class="post-date">Posted on {{post.formattedCreatedAt}}</p>
  <div class="actions">
    {{#unless post.currentUser}}
      <form action="/friends" method="post">
        <input type="hidden" name="recipientId" value={{post.user}} />
        <button type="submit" class="befriend-button">Poke</button>
      </form>
    {{/unless}}

    {{#if post.image}}
      <img class="post-image" src="{{post.image}}" height="300px" width="300px">
    {{/if}}

    {{#if post.user.image}}
      <img src="{{post.user.image}}" class="avatar">
    {{/if}}

    {{#if post.currentUser}}
      <button class="edit-button" id="editBtn-{{post.id}}">Edit</button>
      <form action="/posts/{{post.id}}/delete" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this post?')">
      </form>
    {{/if}}

    <ul class="post-comment" id="comments-{{post.id}}">
      {{> posts/new_comment post}}
      {{> posts/likes post}}
      {{#each post.comments}}
        {{> posts/comment this}}
      {{/each}}
    </ul>
  </div>
</li>

<div id="editModal-{{post._id}}" class="modal">
  <div class="modal-content">
    <form class="updateForm" action="/posts/{{post._id}}/update" method="post" enctype="application/x-www-form-urlencoded">
      <label for="message">Message:</label>
      <textarea id="message" name="message">{{post.message}}</textarea><br/>
      <input type="submit" value="Update Post"/>
    </form>
  </div>
</div>
