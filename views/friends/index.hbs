<div class="friends-container">
  <section class="requests-received">
    <h2>Friendship Requests</h2>
    {{#if friendshipRequests}}
    <ul class="friendship-requests">
      {{#each friendshipsRequests}}
        <li>{{this.recipient.username}}</li>
      {{/each}}
    </ul>
    {{else}}
    <p>You have currently no friend requests.</p>
    {{/if}}
  </section>

  <section class="requests-sent">
    <h2>Pending Friendships</h2>
    {{#if pendingFriendships}}
    <ul class="pending-friendships">
      {{#each pendingFriendships}}
        <li>
          <p class="username">{{this.requester.username}}</p>
          <div class="actions">
            <form action="friends/accept" method="post">
              <input
                type="hidden"
                name="requesterId"
                value={{this.requester._id}}
              />
              <button type="submit" class="accept-button">Accept</button>
            </form>
            <form action="friends/reject" method="post">
              <input
                type="hidden"
                name="requesterId"
                value={{this.requester._id}}
              />
              <button type="submit" class="reject-button">Reject</button>
            </form>
          </div>
        </li>
      {{/each}}
    </ul>
    {{else}}
    <p>You have currently no pending requests.</p>
    {{/if}}
  </section>

  <section class="friends">
    <h2>You are friends with</h2>
    <ul class="accepted-friendships">
      {{#each acceptedFriendships}}
        <li>{{this.requester.username}}</li>
      {{/each}}
    </ul>
  </section>
</div>